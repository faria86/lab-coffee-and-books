<form method="POST">
  <div id="map-container"></div>

  <label for="place-input">Place Name</label>
  <input required id="place-input" type="text" name="name" placeholder="Place Name">

  <label for="latitude-input">Place Latitude</label>
  <input required id="latitude-input" type="text" name="latitude" placeholder="Place Latitude">

  <label for="longitude-input">Place Longitude</label>
  <input required id="longitude-input" type="text" name="longitude" placeholder="Place Longitude">

  <button>Create a Place</button>
</form>